<?xml version="1.0"?>

<PropertyList>

<path>caution_warning.ac</path>

    <animation>
        <type>material</type>
        <object-name>caution_annunciator.light</object-name>
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/alarms/caution-warning</factor-prop>
        </emission>
		<condition>
			<property>instrumentation/annunciators/general/serviceable</property>
		</condition>
    </animation>

    <animation>
		<type>pick</type>
		<object-name>caution_annunciator.light</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-assign</command>
				<property>controls/switches/caution_annunciator-click</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>sim/alarms/caution-warning</property>
				<value>0</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/switches/caution_annunciator-click</property>
					<value>1</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>caution_annunciator.light</object-name>
		<property>controls/switches/caution_annunciator-click</property>
		<factor>0.002</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>

</PropertyList>