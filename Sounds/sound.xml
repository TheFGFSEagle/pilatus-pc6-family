<?xml version="1.0"?>
<PropertyList>
	<fx>
		<starter>
			<name>starter</name>
			<path>Aircraft/pilatus-pc6-family/Sounds/starter_loop.wav</path>
			<mode>looped</mode>
			<property>controls/engines/engine/starter</property>
			<volume>
				<factor>1.0</factor>
			</volume>
			<pitch>
				<property>engines/engine/rpm</property>
				<factor>0.0005</factor>
				<offset>0.0</offset>
				<min>0.0</min>
				<max>1.5</max>
			</pitch>
		</starter>
		
		<engine>
			<name>whine</name>
			<path>Aircraft/pilatus-pc6-family/Sounds/whine.wav</path>
			<mode>looped</mode>
			<property>engines/engine/running</property>
			<volume>
				<factor>0.5</factor>
			</volume>
			<pitch>
				<property>engines/engine/rpm</property>
				<type>lin</type>
				<factor>.08</factor>
			</pitch>
		</engine>
	
		<engine>
			<name>engine</name>
			<mode>looped</mode>
			<path>Aircraft/pilatus-pc6-family/Sounds/turboprop1.wav</path>
			<condition>
				<greater-than>
					<property>engines/engine/thruster/rpm</property>
					<value>0</value>
				</greater-than>
			</condition>
			<property>engines/engine/running</property>
			<volume>
				<property>orientation/alpha-deg</property>
				<type>abs</type>
				<factor>0.0005</factor>
				<min>0.8</min>
				<max>1.0</max>
			</volume>
			<pitch>
				<property>engines/engine/thruster/rpm</property>
				<factor>0.0009</factor>
				<offset>0.0</offset>
				<min>0.0</min>
				<max>3.0</max>
				<type>lin</type>
			</pitch>
		</engine>
		
		<tire-rumble>
			<name>tire-rumble</name>
			<mode>looped</mode>
			<path>Aircraft/pilatus-pc6-family/Sounds/rumble.wav</path>
			<condition>
				<or>
					<property>gear/gear[0]/wow</property>
					<property>gear/gear[1]/wow</property>
					<property>gear/gear[2]/wow</property>
				</or>
			</condition>
			<volume>
				<property>velocities/groundspeed-kt</property>
				<factor>0.004</factor>
				<max>0.3</max>
			</volume>
		</tire-rumble>
		
		<gear-wind>
			<name>gear-wind</name>
			<mode>looped</mode>
			<path>Aircraft/pilatus-pc6-family/Sounds/rumble.wav</path>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.004</factor>
				<max>1.0</max>
			</volume>
		</gear-wind>
		
		<squeal>
			<name>squeal</name>
			<path>Aircraft/pilatus-pc6-family/Sounds/squeal.wav</path>
			<condition>
				<or>
					<property>gear/gear[0]/wow</property>
					<property>gear/gear[1]/wow</property>
					<property>gear/gear[2]/wow</property>
				</or>
			</condition>
			<volume>
				<property>velocities/speed-down-fps</property>
				<factor>0.05</factor>
			</volume>
			<volume>
				<property>velocities/groundspeed-kt</property>
				<factor>0.01</factor>
			</volume>
			<volume>
				<internal>dt_stop</internal>
				<factor>0.05</factor>
				<max>1.0</max>
			</volume>
			<pitch>
				<property>velocities/groundspeed-kt</property>
				<factor>0.0025</factor>
				<offset>1.2</offset>
			</pitch>
		</squeal>
		
		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>Aircraft/pilatus-pc6-family/Sounds/wind.wav</path>
			<property>velocities/airspeed-kt</property>
			<volume>
				<property>position/altitude-ft</property>
				<factor>-0.000015</factor>
				<offset>1.0</offset>
				<min>0.1</min>
				<max>1.0</max>
			</volume>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.0015</factor>
				<min>0.03</min>
				<max>0.25</max>
			</volume>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<offset>1.25</offset>
			</pitch>
		</wind>
		
		<buffet>
			<name>alpha-buffet</name>
			<mode>looped</mode>
			<condition>
				<greater-than>
					<property>orientation/alpha-deg</property>
					<value>10.0</value>
				</greater-than>
			</condition>
			<path>Aircraft/pilatus-pc6-family/Sounds/rumble.wav</path>
			<volume>
				<property>orientation/alpha-deg</property>
				<type>abs</type>
				<factor>0.02</factor>
				<max>0.8</max>
			</volume>
			<pitch>
				<property>orientation/alpha-deg</property>
				<type>abs</type>
				<factor>0.05</factor>
			</pitch>
		</buffet>
		
		<stall>
			<name>stall</name>
			<mode>looped</mode>
			<path>Aircraft/pilatus-pc6-family/Sounds/stall.wav</path>
			<condition>
				<property>sim/alarms/stall-warning</property>
				<property>sim/current-view/internal</property>
			</condition>
			<volume>
				<property>sim/alarms/stall-warning</property>
				<max>1.0</max>
			</volume>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</stall>
		
		<switch>
			<name>click on</name>
			<mode>once</mode>
			<path>Aircraft/pilatus-pc6-family/Sounds/click.wav</path>
			<condition>
				<and>
					<property>sim/sound/switch</property>
					<property>sim/current-view/internal</property>
				</and>
			</condition>
			<volume>
				<factor>0.45</factor>
			</volume>
		</switch>
		
		<switch>
			<name>Warning alarm</name>
			<mode>looped</mode>
			<path>Aircraft/pilatus-pc6-family/Sounds/warning2.wav</path>
			<condition>
				<and>
					<property>instrumentation/annunciators/general/serviceable</property>
					<property>sim/alarms/warning-warning</property>
					<property>sim/current-view/internal</property>
				</and>
			</condition>
			<volume>
				<factor>1</factor>
			</volume>
		</switch>
		
		<crash>
			<name>Crash sound</name>
			<mode>once</mode>
			<path>Aircraft/pilatus-pc6-family/Sounds/crash.wav</path>
			<condition>
					<property>sim/sound/crash</property>
			</condition>
			<volume>
				<factor>1</factor>
			</volume>
		</crash>
	</fx>
</PropertyList>
